<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardBackgroundColor="@color/gold_20"
    android:layout_margin="8dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:text="@string/item_rate"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/item_interest_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:gravity="fill_vertical"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingStart="5dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/item_initial_capital"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/item_initial_capital"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:gravity="fill_vertical"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:paddingStart="5dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/item_final_capital"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/item_final_capital"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:gravity="fill_vertical"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:paddingStart="5dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/item_type_of_capitalization"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/item_type_of_capitalization"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:gravity="fill_vertical"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:paddingStart="5dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/replenishmentInAMonth"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/item_replenishment_in_a_month"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:gravity="fill_vertical"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:paddingStart="5dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/result"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/item_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:gravity="fill_vertical"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>