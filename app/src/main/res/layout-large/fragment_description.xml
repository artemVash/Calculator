<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_intro_fragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        android:transitionName="logo"/>

    <TextView
        android:id="@+id/main_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="@string/main_text_description"
        android:textColor="@color/red_color_logo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/second_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/second_text_description"
        android:textColor="@color/text_color_fragment_description"
        app:layout_constraintTop_toBottomOf="@+id/main_text_description" />

    <TextView
        android:id="@+id/second_text_description_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/second_text_description_item1"
        android:textColor="@color/text_color_fragment_description"
        app:layout_constraintTop_toBottomOf="@+id/second_text_description" />

    <TextView
        android:id="@+id/second_text_description_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/second_text_description_item2"
        android:textColor="@color/text_color_fragment_description"
        app:layout_constraintTop_toBottomOf="@+id/second_text_description_item1" />

    <TextView
        android:id="@+id/second_text_description_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/second_text_description_item3"
        android:textColor="@color/text_color_fragment_description"
        app:layout_constraintTop_toBottomOf="@+id/second_text_description_item2" />

    <TextView
        android:id="@+id/second_text_description_additionally"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:text="@string/second_text_description_additionally"
        android:textColor="@color/text_color_fragment_description"
        app:layout_constraintTop_toBottomOf="@+id/second_text_description_item3" />

    <TextView
        android:id="@+id/btn_further"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/further"
        android:textSize="26sp"
        android:textColor="@color/red_color_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:layout_constraintHorizontal_bias="0.9"/>


</androidx.constraintlayout.widget.ConstraintLayout>